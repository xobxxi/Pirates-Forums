    <template title="pirateProfile_pirate_card.css" version_id="8" version_string="1.0.0 Alpha 9"><![CDATA[#pirateProfile #cardLoader
{
	height: 444px;	
}

.pirateCard
{
	height: 440px;
	width: 500px;
	color: rgb(202,202,202);
        font-family: "Helvetica Neue", Arial, Helvetica, sans-serif;
        display: inline-block;
}

.pirateCard .pirateProfile
{
	height: 424px;
	width: 268px;
	float: left;
}

.pirateCard .pirateProfile .pirateTitle
{
	width: 265px;
	height: 60px;
	line-height: 60px;
	background: transparent url('{xen:property imagePath}/card/title.gif') no-repeat top center;
	text-align: center;
	margin-left: 4px;
}

.pirateCard .pirateProfile .pirateTitle p.pirateName
{
	color: rgb(102,76,241);
	font-size: 13px;
	text-shadow: rgb(0,0,0) 1px 1px 1px;
	font-weight: bold;
	margin: 0;
}

.pirateCard .pirateProfile .pirateTitle p.pirateGuild
{
	font-style: italic;
        font-size: 12px;
	margin-top: -45px;
}

.pirateCard .pirateProfile .pirateAvatar
{
	width: 250px;
	height: 280px;
	margin-left: 5px;
	background: rgb(147,122,84) url('{xen:property imagePath}/card/avatar.gif') no-repeat center center;
        overflow: hidden;
	border-width: 4px 7px 0px;
	-moz-border-image: url({xen:property imagePath}/card/borders/border-frame.gif) 4 7 0 repeat;
	-webkit-border-image: url({xen:property imagePath}/card/borders/border-frame.gif) 4 7 0 repeat;
	border-image: url({xen:property imagePath}/card/borders/border-frame.gif) 4 7 0 repeat;
}

.pirateCard .pirateProfile .pirateAvatar .pirateLevel
{
