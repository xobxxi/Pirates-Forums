         	       	<xen:foreach loop="$pirate.weapons" value="$weapon">
			        <xen:if is="{$weapon.level}"><li data-level="{$weapon.level}" data-max="{$pirate.max.weapon}">{$weapon.name} <span class="pirateLevel">{xen:phrase pirateProfile_pirate_level} {$weapon.level}</span></li></xen:if>
